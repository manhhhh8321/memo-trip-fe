{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": "./",
    "paths": {
      "@components": ["src/components"],
      "@common": ["src/common"],
      "@interfaces": ["src/interfaces"],
      "@pages": ["src/pages"],
      "@api": ["src/api"],
      "@layouts": ["src/layouts"],
      "@redux": ["src/redux"],
      "@configs": ["src/configs"],
      "@modules": ["src/modules"],
      "@utils": ["src/utils"],
      "@translations": ["src/translations"],
      "@assets": ["src/assets"],
      "@router": ["src/router"],
      "@enum": ["src/enum"]
    }
  },
  "include": ["src"]
}
